<!-- Order By -->

<form action="">
  <label for="sort_by">Sort By:</label>
  <select name="sort_by" id="sort_by">
    <option value="first_name">First Name</option>
    <option value="last_name">Last Name</option>
    <option value="job_code">Job Title</option>
  </select>
  <input type="submit" value="Submit">
</form>
<br>

<!-- Employee Table  -->

<p>Browse existing employeees or update/delete an employees..</p> 
<table>
    <thead style="border: 1px solid black">
        <tr>
            <th style="border: 1px solid black">First Name</th>
            <th style="border: 1px solid black">Last Name</th>
            <th style="border: 1px solid black">Telephone</th>
            <th style="border: 1px solid black">Start Date</th>
            <th style="border: 1px solid black">Job Title</th>
        </tr>
    </thead>
    {{#each results}}
    <tr>
        <td style="border: 1px solid black"><div contenteditable>{{this.first_name}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.last_name}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.telephone:}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.start_date}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.job_code}}</div></td>
        <td><button>Delete</button></td>
        <td><button>Update</button></td>
    </tr>
    {{/each}}
    

    <tbody id="header">

    </tbody>
</table>
<br>


<br>

<!-- Employee Form  -->
<fieldset>
<legend>Add Employee</legend>
<form id="employees">
    First Name:
    <input id="first_name" type="text" name="text"><br>
    Last Name:
    <input id="last_name" type="text" name="text"><br>
    Telephone:
    <input id="telephone" type="text" name="text"><br>
    Start Date:
    <input type="date" name="datevalue" id="start_date"><br>
    Job:
    <select id="job_code" name="job_code">
        <option value="bartender">Bartender</option>
        <option value="barback">Barback</option>
        <option value="security">Security</option>
        <option value="manager">Manager</option></select><br>
    <input type="submit" value="Submit">    
</form>
</fieldset>

