<h1>Databar Menu</h1>

<!-- Order By  -->

<form action="">
  <label for="sort_by">Sort By:</label>
  <select name="sort_by" id="sort_by">
    <option value="Whiskey/Bourbon">Whiskey/Bourbon</option>
    <option value="Tequila/Mezcal">Tequila/Mezcal</option>
    <option value="Vodka">Vodka</option>
    <option value="Gin">Gin</option>
    <option value="Rum">Rum</option>
    <option value="Beer">Beer</option>
    <option value="Wine">Wine</option>
  </select>
  <input type="submit" value="Submit">
</form>
<br>

<!-- Menu Table -->
<p>Browse existing drinks or update/delete an drinks..</p> 
<table>
    <thead style="border: 1px solid black">
        <tr>
            <th style="border: 1px solid black">Menu Item</th>
            <th style="border: 1px solid black">Drink Name</th>
            <th style="border: 1px solid black">Ingredient 1</th>
            <th style="border: 1px solid black">Ingredient 2</th>
            <th style="border: 1px solid black">Ingredient 3</th>
            <th style="border: 1px solid black">Ingredient 4</th>
            <th style="border: 1px solid black">Ingredient 5</th>
            <th style="border: 1px solid black">Price</th>
        </tr>
    </thead>
    {{#each results}}
    <tr>
        <td style="border: 1px solid black"><div contenteditable>{{this.menu_item}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.drink_name}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.ingredient_1}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.ingredient_2}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.ingredient_3}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.ingredient_4}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.ingredient_5}}</div></td>
        <td style="border: 1px solid black"><div contenteditable>{{this.price}}</div></td>
        <td><button>Delete</button></td>
        <td><button>Update</button></td>
    </tr>
    {{/each}}
    
    <tbody id="header">

    </tbody>


</table>

<br>
<!-- Inventory Form -->
<fieldset>
<legend>Add Menu Item</legend>
<form id="drinks">
    Drink Name:
    <input id="drink_name" type="text" name="text"><br>
    Ingredient 1:
    <input id="ingredient_1" type="text" name="text"><br>
    Ingredient 2:
    <input id="ingredient_2" type="text" name="text"><br>
    Ingredient 3:
    <input id="ingredient_3" type="text" name="text"><br>
    Ingredient 4:
    <input id="ingredient_4" type="text" name="text"><br>
    Ingredient 5:
    <input id="ingredient_5" type="text" name="text"><br>
    Price:
    <input id="price" type="decimal" name="decimal"><br>
    <input type="submit" value="Submit">    
</form>
</fieldset>
